@model BusinessObjects.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE HTML>
<html lang="en-US">
<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/contents/css/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/contents/css/css/Login.css">
    <script src="~/contents/js/jquery.min.js"></script>
    <script src="~/contents/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="wto-background">
        <div class="container">
            <div class="row">
                <div class="col-xs-12  col-sm-12 col-md-offset-2 col-md-8">
                    <div class="col-xs-12 col-sm-12 col-md-12 loginsection">
                        <div class="col-xs-12 col-sm-6 col-md-6 loginfirst">
                            <img src="~/contents/img/login.png" />
                            <img class="hidden-xs" src="~/contents/img/loginmap.png" />
                            <h3 class="logintitle">SPS / TBT Notifications Management System</h3>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 loginsecond">
                                    <h3 class="loginheading">Login</h3>
                                    <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-1 col-md-10 top-offset-50">
                                        @using (Html.BeginForm("Validate", "Login", FormMethod.Post))
                                        {
                                            <div class="icon-addon addon-lg">
                                                @Html.TextBoxFor(u => u.UserName, new { @class = "form-control textcontrol", @placeholder = "Username" })
                                                <i class="glyphicon glyphicon-user icon"></i>
                                                @Html.ValidationMessageFor(u => u.UserName)
                                            </div>
                                            <div class="icon-addon addon-lg">
                                                @Html.PasswordFor(u => u.Password, new { @class = "form-control textcontrol", @placeholder = "Password" })
                                                <i class="glyphicon glyphicon-lock  icon"></i>
                                                @Html.ValidationMessageFor(u => u.Password)
                                            </div>
                                            <div class="form-group">
                                                <input type="submit" class="btn btn-green btn-block" value="Login" />
                                            </div>
                                            @Html.ValidationSummary(true)
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>