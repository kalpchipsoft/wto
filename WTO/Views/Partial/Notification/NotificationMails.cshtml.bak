@model List<BusinessObjects.Notification.StackholderMail>
@{
    Layout = null;
}

@if (Model != null && Model.Count > 0)
{
    <div class="row top-offset-20">
        <div class="col-xs-12 col-sm-12 col-md-12">
            <hr />
            <p class="wto-label-bold top-offset-30"> Mail(s) sent to stakeholders</p>
            <div class="table-responsive nopaging notificationlist sentmail">
                <table class="table table-bordered display" id="notificationlist" cellspacing="0" width="100%">
                    <thead class="second-blackbackground">
                        <tr>
                            <th class="col-sm-2">Date</th>
                            <th class="col-sm-8">Subject</th>
                            <th class="col-sm-1">Sent To</th>
                        </tr>
                    </thead>
                    <tbody class="whitebackground">
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var obj in @Model)
                            {
                                <tr>
                                    <td>@obj.MailSentDate</td>
                                    <td>
                                        <p>
                                            @obj.Subject
                                        </p>
                                    </td>
                                    <td><div class="span-badge">@obj.StakeholderCount</div></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5">No record found..</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
}