@model BusinessObjects.ManageAccess.PageLoad_CountryList
@{
    Layout = null;
}
<input id="hdnCountryId" type="hidden" value="0" />
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12">
        <label class="table-heading">Countries (@Model.TotalCount)</label>
        <a href="#" class="btn btn-light-blue btn-padding pull-right" data-target="#AddCountry" onclick="AddCountryPopup();" data-toggle="modal">Add Country</a>
        <div class="table-responsive nopaging notificationlist top-offset-20" st>
            <table class="table table-bordered">
                <thead class="second-blackbackground">
                    <tr>
                        <th>S.No</th>
                        <th>Country Code</th>
                        <th>Country Name</th>
                        <th>Status</th>
                        <th class="text-center">Edit</th>
                        <th class="text-center">Delete</th>
                    </tr>
                </thead>
                <tbody class="whitebackground">
                    @if (@Model.CountryList != null)
                    {
                        foreach (var item in @Model.CountryList)
                        {
                            <tr>
                                <td>@item.ItemNumber</td>
                                <td>@item.CountryCode</td>
                                <td>@item.CountryName</td>
                                @if (@item.Status == 1)
                                {
                                    <td>Active</td>
                                }
                                else
                                {
                                    <td>Inactive</td>
                                }
                                <td class="text-center"><a href="#" onclick="EditCountryData(@item.CountryId);"><span class="glyphicon glyphicon-edit"></span></a></td>
                                <td class="text-center"><a href="#" class='@(@item.IsInUse? "hidden":"")' onclick="Confirm('Delete','Do you want to delete the @item.CountryName ?','Yes', 'No', 'DeleteCountry(@item.CountryId)');"><span class="glyphicon glyphicon-trash"></span></a></td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5">No Record Found ...</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>