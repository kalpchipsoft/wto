@model BusinessObjects.Notification.StakeHolderConversationPopUp
@{
    Layout = null;
}

<div class="modal-dialog modal-lg selecthrdialog">
    <div class="modal-content selecthrcontent">
        <div class="modal-header selecthrheader">
            <button type="button" class="close selecthrclose" data-dismiss="modal">
                <span class="glyphicon glyphicon-remove"></span>
            </button>
        </div>
        <div class="modal-body selecthrbody" style="height: 550px; overflow-y: scroll;">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12">
                    <div class="col-xs-12 col-sm-12 col-md-12 selecthrbodyinner">
                        <div class="col-xs-12 col-sm-12 col-md-12 top-offset-20">
                            <div class="notificationnumber padding-bottom-10">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-12 col-md-12 bottom-offset-10">
                                        <h4 class="selecthrheading">Mail conversation</h4>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                        <p class="wto-label-bold dark-blue">Title <span class="pull-right">:</span></p>
                                    </div>
                                    <div class="col-xs-12 col-sm-8 col-md-8">
                                        @*<p class="wto-label-normal dark-blue">@Model.Title</p>*@
                                        <p class="wto-label-normal dark-blue">@Html.Label("", "Title", new { id = "lblTitle_ConversationPopUp" })</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                        <p class="wto-label-bold dark-blue">Stakeholder Name<span class="pull-right">:</span></p>
                                    </div>
                                    <div class="col-xs-12 col-sm-8 col-md-8">
                                        <p class="wto-label-normal dark-blue" id="lblStakeholderName">@Html.Label("", "Name", new { id = "lblStakeholderName_ConversationPopUp" })</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <div class="row mail-count-height">
                                <div class="col-md-12">
                                    <div class="panel-group" id="accordionmailcount" role="tablist" aria-multiselectable="true">
                                        @if (@Model.Conversation != null)
                                        {
                                            foreach (var item in @Model.Conversation)
                                            {
                                                <div class="panel panel-default">
                                                    <div class="panel-heading" role="tab" id="mailcountOne">
                                                        <h4 class="panel-title">
                                                            <a class="collapsed" role="button" data-toggle="collapse"
                                                               data-parent="#accordionmailcount" href="#collapsemailcountOne" aria-expanded="false" aria-controls="collapsemailcountOne">
                                                                <span>@item.MailDate</span><span class="left-offset-20">@item.MailTime</span>
                                                                <span class="left-offset-20">@item.MailSubject</span>
                                                                <span class="left-offset-20 attacmenticon glyphicon glyphicon-paperclip"></span>
                                                                @if (@item.MailType)
                                                                {
                                                                    <span class="left-offset-20 shareback"><img src="~/contents/img/shareback.png" alt="shareback" style="margin-top:-4px;" /></span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="left-offset-20 shareback glyphicon glyphicon-share-alt"></span>
                                                                }
                                                            </a>
                                                        </h4>
                                                    </div>
                                                    <div id="collapsemailcountOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="mailcountOne">
                                                        <div class="panel-body">
                                                            <a class="forwardmail "><span class="glyphicon glyphicon-share-alt"></span></a>
                                                            @item.MailMessage
                                                            <p class="top-offset-10 bottom-offset-10"><span><a>Document1 </a></span> <span class="left-offset-20"><a> Document2</a></span></p>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 top-offset-10">
                    <a class="pull-left">Add stakeholder response</a>
                </div>
            </div>
            <div id="divAddResponse" class="row">
                <div class="col-xs-12 col-sm-12 col-md-12">
                    <div class="col-xs-12 col-sm-12 col-md-12 selecthrbodyinner">
                        <div class="col-xs-12 col-sm-12 col-md-12 top-offset-20">
                            <div class="notificationnumber padding-top-10 padding-bottom-10" style="background-color: #81bbbd;">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-12 col-md-12 top-offset-10">
                                        <div class="col-xs-12 col-sm-3 col-md-3">
                                            <p class="wto-label-bold dark-blue">Subject<sup class="mandetory">*</sup><span class="pull-right">:</span></p>
                                        </div>
                                        <div class="col-xs-12 col-sm-9 col-md-9">
                                            <input type="text" id="txtResponseSubject" class="form-control  whitebackground" placeholder="Enter subject here." />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12 col-sm-12 col-md-12 top-offset-20">
                                        <div class="col-xs-12 col-sm-3 col-md-3">
                                            <p class="wto-label-bold dark-blue">Message<sup class="mandetory">*</sup><span class="pull-right">:</span></p>
                                        </div>
                                        <div class="col-xs-12 col-sm-9 col-md-9">
                                            <textarea id="txtResponseMessage" class="form-control whitebackground" cols="30" rows="5" placeholder=""></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12 col-sm-12 col-md-12 top-offset-20">
                                        <div class="col-xs-6 pull-right">
                                            <a class="btn btn-red btn-padding pull-right left-offset-10">Discard</a>
                                            <a class="btn btn-light-blue btn-padding pull-right">Save response</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        var Title = $('#TitleId').val();
        var SH_Id = $('#hdnStakeholderId').val();
        $('#lblTitle_ConversationPopUp').text(Title);
        $('#lblStakeholderName_ConversationPopUp').text($('#lblStakeHolderName_' + SH_Id).text());
    });
</script>
